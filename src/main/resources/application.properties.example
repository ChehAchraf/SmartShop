spring.application.name=SmartShop

#######################
# spring doc settings
#######################
springdoc.swagger-ui.path=/swagger-ui.html
spring.mvc.pathmatch.matching-strategy=ant_path_matcher

#######################
# data base settings
#######################
# Change 'smartshop_db' if your database name is different
spring.datasource.url=jdbc:mysql://localhost:3306/smartshop_db?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true

#your actual database username
spring.datasource.username=root

spring.datasource.password=your_password_here

spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

#######################
# Jpa Hibernate Config
#######################
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true